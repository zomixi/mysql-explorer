{
  "name": "mysql-explorer",
  "displayName": "MySQL Explorer",
  "description": "MySQL Explorer for VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:connect",
    "onView:database",
    "onView:table"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mysql-explorer",
          "title": "MySQL Explorer",
          "icon": "media/mysql.svg"
        }
      ]
    },
    "views": {
      "mysql-explorer": [
        {
          "id": "connect",
          "name": "CONNECT"
        },
        {
          "id": "database",
          "name": "DATABASE"
        },
        {
          "id": "table",
          "name": "TABLE"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "connect",
        "contents": "No connect found. [learn more](https://github.com/zomixi/mysql-explorer/)\n"
      },
      {
        "view": "database",
        "contents": "No database found. [learn more](https://github.com/zomixi/mysql-explorer/)\n"
      },
      {
        "view": "table",
        "contents": "No table found. [learn more](https://github.com/zomixi/mysql-explorer/)\n"
      }
    ],
    "commands": [
      {
        "command": "connect.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "connect.add",
        "title": "Add",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "connect.edit",
        "title": "Edit",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "connect.delete",
        "title": "Delete",
        "icon": {
          "light": "resources/light/delete.svg",
          "dark": "resources/dark/delete.svg"
        }
      },
      {
        "command": "database.refresh",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "database.add",
        "title": "Add",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "database.edit",
        "title": "Edit",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "database.delete",
        "title": "Delete",
        "icon": {
          "light": "resources/light/delete.svg",
          "dark": "resources/dark/delete.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "connect.refresh",
          "when": "view == connect",
          "group": "navigation"
        },
        {
          "command": "connect.add",
          "when": "view == connect",
          "group": "navigation"
        },
        {
          "command": "database.refresh",
          "when": "view == database",
          "group": "navigation"
        },
        {
          "command": "database.add",
          "when": "view == database",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "connect.edit",
          "when": "view == connect",
          "group": "inline"
        },
        {
          "command": "connect.delete",
          "when": "view == connect",
          "group": "inline"
        },
        {
          "command": "database.edit",
          "when": "view == database",
          "group": "inline"
        },
        {
          "command": "database.delete",
          "when": "view == database",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "glob": "^8.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "prettier": "2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown",
    "*.css": "stylelint --fix"
  }
}
